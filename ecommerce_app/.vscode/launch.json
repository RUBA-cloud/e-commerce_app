{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flutter: Attach to Device",
            "type": "dart",
            "request": "attach"
        },
        {
            "name": "Flutter",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart"
        },
        {
            "name": "Flutter",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "Flutter: Attach to Device",
            "type": "dart",
            "request": "attach"
        },
        /* ---------- Your existing Chrome config ---------- */
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        /* ---------- Flutter: default debug (device picked in status bar) ---------- */
        {
            "name": "Flutter: Debug (device picker)",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "args": []
        },
        /* ---------- Flutter: Android emulator (if you want to pin one) ---------- */
        {
            "name": "Flutter: Android emulator",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "android"
        },
        /* ---------- Flutter: iOS Simulator (macOS only) ---------- */
        {
            "name": "Flutter: iOS Simulator",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "ios"
        },
        /* ---------- Flutter Web: Chrome ---------- */
        {
            "name": "Flutter Web: Chrome",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "chrome",
            "args": [
                "--web-renderer=html"
                /* or "canvaskit" */
            ]
        },
        /* ---------- Flutter Web: Web Server (attach with any browser) ---------- */
        {
            "name": "Flutter Web: Web Server",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "web-server",
            "args": [
                "--web-renderer=html",
                "--host=127.0.0.1",
                "--port=8080"
            ]
        },
        /* ---------- macOS desktop (if enabled) ---------- */
        {
            "name": "Flutter: macOS Desktop",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "macos"
        },
        /* ---------- Windows / Linux desktop examples (uncomment if needed) ---------- */
        {
            "name": "Flutter: Windows Desktop",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "windows"
        },
        {
            "name": "Flutter: Linux Desktop",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "deviceId": "linux"
        },
        /* ---------- Profile & Release builds ---------- */
        {
            "name": "Flutter: Profile",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "Flutter: Release",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "release"
        },
        /* ---------- With flavors & dart-define ---------- */
        {
            "name": "Flutter: Debug (flavor=dev, defines)",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug",
            "args": [
                "--flavor",
                "dev",
                "--dart-define=API_BASE_URL=https://dev.example.com",
                "--dart-define=SENTRY_DSN="
            ]
        }
    ],
    "compounds": [
        /* Example: start Flutter web server + open your separate Chrome debugger */
        {
            "name": "Run Flutter Web + Localhost Chrome",
            "configurations": [
                "Flutter Web: Web Server",
                "Launch Chrome against localhost"
            ]
        }
    ]
}